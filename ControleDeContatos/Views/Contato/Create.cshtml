@{
	ViewData["title"] = "Criação de contatos";
}

<div class="text-center">

	<h1>Cadastrar Contato.</h1>

</div>

<form>
	<div class="form-group mt-3">
		<label for="nome">Nome</label>
		<input type="text" class="form-control" placeholder="Digite o nome do contato">
	</div>

	<div class="form-group mt-3">
		<label for="email">E-mail</label>
		<input type="text" class="form-control" placeholder="Digite o e-mail do contato">
	</div>

	<div class="form-group mt-3">
		<label for="celular">Celular</label>
		<input type="text" class="form-control" placeholder="Digite o celular do contato">
	</div>

	<button type="submit" class="btn btn-primary mt-3 w-100">Adicionar</button>
	<a class="btn btn-secondary mt-3 w-100" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>